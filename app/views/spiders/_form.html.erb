<%= form_for @spider, :html => {:class => 'form-horizontal'} do |f| %>
  <div class="form-group">
    <%= f.label :title, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :title, :class => "form-control", :required => true %>
    </div>
  </div>
  <div class="hr-line-dashed"></div>

  <div class="form-group">
    <%= f.label :url, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :url, :class => "form-control", :required => true %>
    </div>
  </div>
  <div class="hr-line-dashed"></div>

  <div class="form-group">
    <%= f.label :rule, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :rule, :class => "form-control" %>
    </div>
  </div>
  <div class="hr-line-dashed"></div>

  <div class="form-group">
    <div class="col-sm-4 col-sm-offset-2">
        <%= f.submit '提交', :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
